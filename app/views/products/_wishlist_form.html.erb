<% if current_user %>
  <% form_for WishedProduct.new do |f| %>
    <%= f.hidden_field :variant_id, :value => @product.master.id %>
    <button type='submit' class='large primary'>
      <%= image_tag('/images/add-to-cart.png') + t('add_to_wishlist') %>
    </button>
  <% end %>
  <%= javascript_include_tag 'wishlist' %>
<% end %>
